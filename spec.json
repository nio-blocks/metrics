{
  "nio/ProcessMetrics": {
    "version": "0.1.0",
    "description": "Get statistics about a process running on the computer.",
    "properties": {
      "menu": {
        "title": "Menu",
        "type": "ObjectType",
        "description": "Flags for turning off/on various metrics.",
        "default": {
          "children": false,
          "virtual_memory": true,
          "num_fds": true,
          "threads": false,
          "cmd_line": false,
          "is_running": true,
          "num_ctx_switches": true,
          "memory_percent": true,
          "cpu_percent": true
        }
      },
      "pid": {
        "title": "PID",
        "type": "IntType",
        "description": "Process identifier for metrics to be queried on.",
        "default": null
      }
    },
    "inputs": {
      "default": {
        "description": "Any list of signals."
      }
    },
    "outputs": {
      "default": {
        "description": "A signal with metrics about the specific process."
      }
    },
    "commands": {}
  },
  "nio/SystemMetrics": {
    "version": "0.1.0",
    "description": "Get general statistics about the computer.",
    "properties": {
      "menu": {
        "title": "Menu",
        "type": "ObjectType",
        "description": "Flags for turning off/on various metrics.",
        "default": {
          "disk_usage": true,
          "virtual_mem": true,
          "disk_io_ct": true,
          "cpu_perc": true,
          "skt_conns": false,
          "swap_mem": true,
          "sensors": false,
          "net_io_ct": true,
          "pids": false
        }
      }
    },
    "inputs": {
      "default": {
        "description": "Any list of signals."
      }
    },
    "outputs": {
      "default": {
        "description": "An attribute is added for each metric read. Attribute names are the menu name followed by an underscore and then then specific metric name."
      }
    },
    "commands": {
      "cpu": {
        "params": {},
        "description": "Returns the overall cpu usage."
      },
      "platform": {
        "params": {},
        "description": "Returns the platform data."
      },
      "report": {
        "params": {},
        "description": "Returns an overall report of the gathered statistics."
      },
      "timestamp": {
        "params": {},
        "description": "Returns the current system timestamp."
      }
    }
  }
}